@model GuildCars.Models.Tables.ContactRecord
@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary();
            <div class="panel panel-primary">
                <div class="panel-body">
                    <div class="form-group">
                        <label>Name: </label>
                        @Html.TextBoxFor(m => m.Name)
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Name)</span>
                    </div>
                    <div class="form-group">
                        <label>Email: </label>
                        @Html.TextBoxFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        <label>Phone: </label>
                        @Html.TextBoxFor(m => m.Phone)
                    </div>
                    <div class="form-group">
                        <p>Message: </p>
                        @Html.TextAreaFor(m => m.Message, new { style = "width: 255px; height: 200px;" })
                        <span class="text-danger">@Html.ValidationMessageFor(m => m.Message)</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Sumbit</button>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <div id="map"></div>
        <h5> 15 S 5th St, Suite #600<br/></h5>
        <h5>Minneapolis, MN 55402</h5>
            
        
        <script>
            function initMap() {

                var uluru = { lat: 44.9800565, lng: -93.267674 };

                var map = new google.maps.Map(
                    document.getElementById('map'), { zoom: 15, center: uluru });

                var marker = new google.maps.Marker({ position: uluru, map: map });
            }
        </script>
        <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBwV-C9cu4YY9p6Q7NCrjNN8C5rZWvoKfU&callback=initMap"
                type="text/javascript"></script>
        <link href="~/OurScripts/StyleSheet1.css" rel="stylesheet" />
    </div>
</div>


