<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @*<link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css.map" />*@
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="margin-top: -50px">
          @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })      
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <span> @Html.ActionLink("New Inventory", "New", "Inventory", new { area = "" }, new { @class = "nav-item nav-link" })</span>
                <span>@Html.ActionLink("Used Inventory", "Used", "Inventory", new { area = "" },new { @class = "nav-item nav-link" })</span>
                <span> @Html.ActionLink("Specials", "Specials", "Home", new { area = "" }, new { @class = "nav-item nav-link" })</span>
                <span> @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-item nav-link" })</span>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/scripts/bootstrap.js")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
